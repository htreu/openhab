then
	sendCommand(Shutter_GF_Kitchen, DOWN)
	Thread::sleep(500)
	sendCommand(Shutter_GF_Essen, DOWN)
	Thread::sleep(500)
	sendCommand(Shutter_FF_Bath, DOWN)
end

