// Wohnzimmer links
rule Rollershutter_WZ_links_up
when
    Item Shutter_GF_WZ_links received command 0
then
    sendCommand(Shutter_GF_WZ_links, UP)
end

rule Rollershutter_WZ_links_down
when
    Item Shutter_GF_WZ_links received command 100
then
    sendCommand(Shutter_GF_WZ_links, DOWN)
end

